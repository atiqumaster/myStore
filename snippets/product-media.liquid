<div class="media-wrapper">
    {% case media.media_type %}
        {% when 'image' %}
            <img src="{{ media | img_url: 'large' }}" width="200px" height="200px" class="media-image" />
        {% when 'external-video' %}
            {{ media | external_video_tag: class: 'media-video' }}
        {% when 'video' %}
            {{ media | video_tag: controls: true, class: 'media-video' }}
        {% when 'model' %}
            {{ media | model_viewer_tag }}
        {% else %}
            {{ media | media_tag }}
    {% endcase %}
</div>
<style>
    .product-media {
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
    }
    .media-wrapper {
        overflow: hidden;
        width: 100%;
        max-width: 400px; /* Set a max width for each media item */
        margin: 0 auto;
    }
    .media-image,
    .media-video {
        width: 100%;
        height: auto;
        object-fit: cover;
        border-radius: 8px;
    }
</style>