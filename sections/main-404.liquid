 {
   "name" : "template 404",
    "settings": [
         {
             "type" : "text",
              "id" : "title",
               "default" : "404",
                "label" : "404 heading title"
         } ,   {
         "type": "text",
        "id" : "subtext_title",
       "default" : "page you were looking does not exist",
      "label": "404 heading title"
    }
     ]
  }
{%  endschema %}
